pipeline {
    options { timestamps() }
    agent none
    stages {
        stage('Check scm') {
            agent any
            steps {
                checkout scm
            }
        } 
        stage('Build') {
            steps {
                echo "Building ...${BUILD_NUMBER}"
                echo "Build completed"
            }
        } 
        stage('Test') {
            agent { 
                docker { 
                    image 'python:3.9-alpine' 
                    args '-u="root"'
                } 
            }
            steps {
                // Встановлюємо залежності Python
                sh 'apk add --update python3 py3-pip'
                sh 'pip install xmlrunner'

                // Запускаємо тести та зберігаємо звіт у форматі XML
                sh 'python3 lab4/test_pawnhsop.py'
            }
            post {
                always {
                    // Архівуємо звіти про тести
                    junit 'lab4/results.xml'
                }
                success {
                    echo "Application testing successfully completed"
                }
                failure {
                    echo "Oooppss!!! Tests failed!"
                }
            }
        }
    } 
}
